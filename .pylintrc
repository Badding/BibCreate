[MASTER]

ignore=tests, story_tests, ui, tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        too-few-public-methods,
        invalid-name

[FORMAT]
max-line-length=120

[REFACTORING]
max-nested-blocks=3  


[DESIGN]
max-args=10
max-attributes=10
max-locals=10
